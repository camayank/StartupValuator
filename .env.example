# Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/startup_valuator
DB_POOL_MIN=2
DB_POOL_MAX=10

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-change-this

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=startup-valuator-documents

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_FROM=noreply@startupvaluator.in
SENDGRID_API_KEY=

# SMS/WhatsApp (Optional - Twilio, Gupshup, etc.)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Payment Gateway (Razorpay, Stripe, etc.)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# AI Services (Optional - for insights)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Monitoring & Logging
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=604800000

# Feature Flags
ENABLE_GOVERNMENT_SCHEMES=true
ENABLE_AI_INSIGHTS=false
ENABLE_WHITE_LABEL=false

# Indian Market Configuration
DEFAULT_CURRENCY=INR
DEFAULT_TAX_RATE=25
DEFAULT_DISCOUNT_RATE=30

# Valuation Configuration
DCF_MIN_PROJECTION_YEARS=3
DCF_MAX_PROJECTION_YEARS=10
BERKUS_BASE_VALUE=20000000
BERKUS_FACTOR_VALUE=5000000

# Investment Readiness Configuration
READINESS_PASS_SCORE=65
READINESS_EXCELLENT_SCORE=80

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing scheduled maintenance. We'll be back soon!
